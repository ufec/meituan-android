<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.shopdetails.ShopDetailsFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".ui.shopdetails.ShopDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:background="@color/white"
            android:id="@+id/appbar_shop_details"
            android:layout_height="230dp"
            android:layout_width="match_parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_shop_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:collapsedTitleGravity="center"
                app:expandedTitleGravity="center"
                app:toolbarId="@+id/toolbar"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
                app:contentScrim="?attr/colorPrimary">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shop_thumbnail"
                    tools:ignore="ImageContrastCheck" />
                <androidx.appcompat.widget.Toolbar
                    app:title="@string/shop_details_fragment_title"
                    app:titleTextColor="@color/white"
                    android:id="@+id/toolbar_shop_details"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_width="match_parent">
                </androidx.appcompat.widget.Toolbar>

                <com.google.android.material.card.MaterialCardView
                    app:strokeWidth="1dp"
                    app:strokeColor="#DEDEDE"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="@dimen/shop_detail_margin"
                    android:layout_marginTop="130dp"
                    android:layout_marginEnd="@dimen/shop_detail_margin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/actv_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="快乐柠檬"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toTopOf="@+id/actv_delivery_time"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/actv_delivery_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="配送约30分钟"
                            app:layout_constraintBottom_toTopOf="@+id/actv_shop_announcement"
                            app:layout_constraintStart_toStartOf="@+id/actv_shop_name"
                            app:layout_constraintTop_toBottomOf="@+id/actv_shop_name" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/actv_shop_announcement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公告：奶茶味道很棒哦！"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/actv_shop_name"
                            app:layout_constraintTop_toBottomOf="@+id/actv_delivery_time" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
                <FrameLayout
                    android:layout_marginStart="203dp"
                    android:layout_marginTop="90dp"
                    android:layout_height="80dp"
                    android:layout_width="130dp"
                    android:elevation="1000dp">
                    <include layout="@layout/shop_thumbnail"/>
                </FrameLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            tools:ignore="SpeakableTextPresentCheck">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/shop_detail_margin"
                    android:text="菜单"/>
                <View
                    android:layout_marginHorizontal="@dimen/shop_detail_margin"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="#DEDEDE"
                    tools:ignore="SmallSp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_product_list"
                    tools:listitem="@layout/product_item"
                    android:layout_margin="@dimen/shop_detail_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <!--购物车图标-->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_shop_detail_shopping_car"
        app:cardElevation="1000dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#454545"
        app:cardCornerRadius="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:background="#3090E8"
            android:scaleType="centerInside"
            android:src="@drawable/ic_shopping_cart_fill"
            app:round="70dp" />
    </androidx.cardview.widget.CardView>
    <!--商品个数badge-->
    <androidx.cardview.widget.CardView
        app:cardElevation="1000dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/red"
        app:layout_constraintBottom_toBottomOf="@+id/cv_shop_detail_shopping_car"
        app:layout_constraintEnd_toEndOf="@+id/cv_shop_detail_shopping_car"
        android:layout_marginBottom="35dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/tv_shop_detail_product_total_count"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:maxLines="1"
            android:visibility="gone"
            android:ellipsize="end"
            android:layout_width="35dp"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <!--底栏-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shop_detail_bottom_bar"
        android:background="#454545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_shop_detail_total_price"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginStart="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_shop_detail_delivery_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_shop_detail_delivery_fee"
            android:textColor="@color/white"
            android:text="另需配送费￥14"
            app:layout_constraintStart_toStartOf="@+id/tv_shop_detail_total_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_shop_detail_total_price"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/btn_checkout_cart"
            android:maxWidth="150dp"
            android:text="还差￥15结算"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="18sp"
            android:background="@color/dark_grey"
            android:layout_margin="0dp"
            android:padding="5dp"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>